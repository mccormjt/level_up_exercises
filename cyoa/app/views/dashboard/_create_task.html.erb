<form class='new-task-form' method='post'>
   <div class='form-group expander medium recipients'>
    <label>Recipients</label>
    <div class='recipient-inputs'>
      <input id='name' name='name' type='text' placeholder='full name'/>
      <input id='telephone' name='telephone' type='text' placeholder='cell number' />
      <button class='btn btn-primary'>+</button>
    </div>
    <div class='recipient-suggestions'></div>
    <div class='input-item recipient-holder'></div>
  </div>

  <div class='form-group expander'>
    <label for='subject'>Subject</label>
    <input class='input-item' id='subject' name='subject' type='text' />
  </div>

  <div class="form-group expander date">
    <label for='due-date'>Due Date</label>
    <input class='input-item' id='due-date' type="text" data-provide='datepicker' >
  </div>

  <div class='form-group expander'>
    <label for='estimated-completion-hours'>Estimated hours to complete?</label>
    <input class='input-item' id='estimated-completion-hours' name='estimated-completion-hours' type='text' />
  </div>

  <div class="form-group expander big">
    <label for='description'>Description</label>
    <textarea class='input-item' id='description' name='description'></textarea>
  </div>

  <div class='actions'>
    <button class='btn btn-success create-btn'>Create</button>
    <button class='btn btn-danger cancel-btn'>Cancel</button>
  </div>
</form>
