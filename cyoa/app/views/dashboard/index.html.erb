<div class='overlay new-task-overlay'></div>

<div class='dashboard'>
  <div class='followup-categories'>
    <div class='filter-placeholder'></div>

    <div class='category new-task-container'>
      <div class='animation-container'>
        <div class='new-task'>
          <div class='new-task-title'>
            <%= fa_icon 'plus' %>
            <span>New Task</span>
          </div>
          <%= render 'dashboard/create_task' %>
        </div>

        <div class='backface'>
          <div class='checkmark'>
            <div class='check-bar left-check-bar'></div>
            <div class='check-bar right-check-bar'></div>
          </div>
          <p>Created</p>
        </div>
      </div>
    </div>

    <div class='category filter inbox'>
      <%= fa_icon 'envelope' %>
      <span>Inbox</span>
      <div class='active-filter-bar'></div>
    </div>

    <div class='category filter sent'>
      <%= fa_icon 'paper-plane' %>
      <span>Sent</span>
    </div>

    <div class='category filter archived'>
      <%= fa_icon 'archive' %>
      <span>Archived</span>
    </div>
  </div>

  <div class='followup-filter-content inbox-active'>
    <div class='prism'>
      <div class='followup-content inbox-content'>
        <div class='sort-options recieved-sort-options'>
        </div>
        <div class='task-container recieved-tasks'>
        </div>
        <div class='overlay remove-task-overlay'></div>
      </div>
      
      <div class='followup-content sent-content'>
        <div class='sort-options sent-sort-options'>
        </div>
        <div class='task-container sent-tasks'>
        </div>
        <div class='overlay remove-task-overlay'></div>
      </div>
      
      <div class='followup-content archived-content'>
        <div class='sort-options archived-sort-options'>
        </div>
        <div class='task-container archived-tasks'>
        </div>
        <div class='overlay remove-task-overlay'></div>
      </div>
    </div>
  </div>
</div>

<%= render 'dashboard/archive_controls_template' %>
